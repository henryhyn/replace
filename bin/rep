#!/usr/bin/env ruby
# -*- coding: utf-8 -*-
# 字符串替换

require 'yaml'
require 'replace'

method = ARGV[0]
Dir['*.md'].map do |file|
  string = File.read(file)
  replace = Replace.new(string)
  buffer = replace.send(method)
  unless File.writable?(file)
    File.open(file).chmod(0644)
  end
  File.write(file, buffer.source)
end